<?xml versionBase="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="model" type="com.mxt.anitrend.model.entity.general.MediaList" />
    </data>

    <FrameLayout
        android:layout_margin="@dimen/lg_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="@dimen/series_image_lg">

        <com.mxt.anitrend.base.custom.view.image.AspectImageView
            android:id="@+id/series_image"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/sample_img"
            app:imageUrl="@{model.anime != null? model.anime.image_url_lge : model.manga.image_url_lge}"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent_image"/>

        <com.mxt.anitrend.base.custom.view.text.SeriesTitleView
            android:id="@+id/series_title"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:padding="@dimen/lg_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Gintama."/>

        <!-- Episode Increment View, With Color View For Airing Status -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mxt.anitrend.base.custom.view.widget.SeriesStatusWidget
                android:id="@+id/series_status"
                android:layout_width="@dimen/md_margin"
                android:layout_height="match_parent"
                tools:background="@color/colorStateBlue"
                app:seriesStatus="@{model}"/>

            <com.mxt.anitrend.base.custom.view.widget.AutoIncrementWidget
                android:id="@+id/series_episodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Rating View -->
        <TextView
            android:id="@+id/series_rating"
            android:layout_gravity="bottom|end"
            android:textColor="@color/white"
            android:padding="@dimen/lg_margin"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.score}"
            tools:text="8.5"/>

    </FrameLayout>

</layout>