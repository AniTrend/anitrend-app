<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="com.mxt.anitrend.view.detail.activity.StaffActivity">

    <LinearLayout
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Image Container & Small Details-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/card_color"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!--Right Info Grid-->
                <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/staff_detail_image"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--Header Items-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp">

                        <TextView
                            android:id="@+id/staff_language"
                            tools:text="Japanese"
                            android:layout_centerVertical="true"
                            android:fontFamily="sans-serif-condensed"
                            android:textAllCaps="true"
                            android:textSize="12sp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/staff_jap_name"
                            tools:text="神谷 浩史"
                            android:fontFamily="sans-serif-medium"
                            android:layout_alignParentStart="true"
                            android:textIsSelectable="true"
                            android:layout_marginTop="2dp"
                            android:textSize="14sp"
                            android:layout_marginEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp" />

                    <FrameLayout
                        android:background="@color/colorBlueGrey200"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <android.support.v4.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="5dp" />

                    <!--Anime Small Details-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="First Name:"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed" />

                        <TextView
                            android:id="@+id/staff_first_name"
                            tools:text="Hiroshi"
                            android:textIsSelectable="true"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:text="Last Name:" />

                        <TextView
                            android:id="@+id/staff_last_name"
                            tools:text="Kamiya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light" />

                        <!--Footer Date Items-->
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Date Of Birth:" />

                            <TextView
                                android:id="@+id/staff_dob"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/anime_title_start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light"
                                tools:text="N/A" />

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/staff_detail_image"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <!--Staff / Actor Information-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/card_color"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <!--Header Text Items-->
                <TextView
                    android:text="Information"
                    android:fontFamily="sans-serif-condensed"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:background="?colorAccent"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Website"
                    />

                <TextView
                    android:id="@+id/staff_website"
                    android:autoLink="web"
                    android:textIsSelectable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    tools:text="https://www.web.com"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:textIsSelectable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Summary"
                    />

                <TextView
                    android:textIsSelectable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/staff_info"
                    tools:text="Summary about the actor or staff"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>