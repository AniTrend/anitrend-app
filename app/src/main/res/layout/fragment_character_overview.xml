<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="model" type="com.mxt.anitrend.api.model.Character"/>
        <variable name="view" type="com.mxt.anitrend.view.detail.fragment.CharacterOverviewFragment"/>
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:mContext="com.mxt.anitrend.view.detail.activity.StaffActivity">

        <LinearLayout
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Image Container & Small Details-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/card_color"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--Right Info Grid-->
                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/character_details_image"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!--Header Items-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp">

                            <TextView
                                android:text="@{model.name_alt}"
                                tools:text="Some Other name"
                                android:layout_centerVertical="true"
                                android:fontFamily="sans-serif-condensed"
                                android:textSize="12sp"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                tools:text="神谷 浩史"
                                android:text="@{model.name_japanese}"
                                android:fontFamily="sans-serif-medium"
                                android:layout_alignParentStart="true"
                                android:textIsSelectable="true"
                                android:layout_marginTop="2dp"
                                android:textSize="14sp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <FrameLayout
                            android:background="@color/colorBlueGrey200"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <android.support.v4.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <!--Anime Small Details-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="First Name:"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:text="@{model.name_first}"
                                tools:text="Hiroshi"
                                android:textIsSelectable="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Last Name:" />

                            <TextView
                                android:text="@{model.name_last}"
                                tools:text="Kamiya"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/character_details_image"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:onClick="@{(v) -> view.onClick(v)}" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <!--Staff / Actor Information-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/card_color"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/staff_website"
                    android:textIsSelectable="true"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@{model.role}"
                    tools:text="Dark Knight, Hero, White Swordsman"
                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:textIsSelectable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@{model.info}"
                    tools:text="Summary about the actor or staff"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</layout>