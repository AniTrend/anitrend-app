<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="com.mxt.anitrend.view.detail.fragment.AnimeExtrasFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <!--Main Container-->
            <LinearLayout
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Characters-->
                <android.support.v7.widget.CardView
                    android:id="@+id/character_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/card_color"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp">

                                <!--Header Text Items-->
                                <TextView
                                    android:text="Characters"
                                    android:fontFamily="sans-serif-condensed"
                                    android:padding="10dp"
                                    android:textSize="16sp"
                                    android:background="?colorAccent"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <android.support.v4.widget.Space
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp" />

                                <!--Details Holder-->
                                <com.mxt.anitrend.custom.StatefulRecyclerView
                                    android:id="@+id/characters_recycler"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clipToPadding="false" />


                        </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <!--Staff-->
                <android.support.v7.widget.CardView
                    android:id="@+id/staff_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/card_color"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <!--Header Text Items-->
                        <TextView
                            android:text="Series Staff"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:background="?colorAccent"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <!--Details Holder-->
                        <com.mxt.anitrend.custom.StatefulRecyclerView
                            android:id="@+id/staff_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <!--Anime-->
                <android.support.v7.widget.CardView
                    android:id="@+id/anime_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/card_color"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <!--Header Text Items-->
                        <TextView
                            android:text="Related Anime"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:background="?colorAccent"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <!--Details Holder-->
                        <com.mxt.anitrend.custom.StatefulRecyclerView
                            android:id="@+id/relation_anime_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <!--Manga-->
                <android.support.v7.widget.CardView
                    android:id="@+id/manga_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/card_color"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">

                        <!--Header Text Items-->
                        <TextView
                            android:text="Related Manga"
                            android:fontFamily="sans-serif-condensed"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:background="?colorAccent"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />

                        <!--Details Holder-->
                        <com.mxt.anitrend.custom.StatefulRecyclerView
                            android:id="@+id/relation_manga_recycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>