<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    app:contentPadding="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="?attr/card_color">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/post_avatar"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/white" />

                <TextView
                    android:id="@+id/post_user_name"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/post_time"
                    android:layout_weight="1.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:textAlignment="viewEnd"
                    />

            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <FrameLayout
                android:id="@+id/post_extra_holder"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/post_extra_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/post_extra_img_gallery"
                    android:visibility="gone"
                    android:layout_gravity="bottom|end"
                    android:textColor="@color/white"
                    tools:text=" Multiple Images"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:drawableStart="@drawable/ic_collections_white_18dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:background="@color/colorBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/post_text"
                android:textIsSelectable="true"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/likes_viewer"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:drawableStart="@drawable/ic_people_grey_600_18dp"
                    />

                <LinearLayout
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ViewFlipper
                        android:id="@+id/mFlipper"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:inAnimation="@android:anim/fade_in"
                        android:outAnimation="@android:anim/fade_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/post_like"
                            android:padding="6dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:typeface="sans"
                            android:textStyle="bold"
                            tools:drawableStart="@drawable/ic_favorite_grey_600_18dp"
                            android:textAlignment="center" />

                        <ProgressBar
                            android:layout_margin="6dp"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />

                    </ViewFlipper>

                    <TextView
                        android:id="@+id/post_reply"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_reply_grey_600_18dp"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/post_edit"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_edit_grey_600_18dp"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:id="@+id/post_delete"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:typeface="sans"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/ic_delete_grey_600_18dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

</android.support.v7.widget.CardView>