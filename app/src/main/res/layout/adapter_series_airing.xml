<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="model" type="com.mxt.anitrend.model.entity.general.SeriesList" />
    </data>

    <FrameLayout
        android:layout_margin="@dimen/lg_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_width="@dimen/series_image_lg">

        <com.mxt.anitrend.base.custom.view.image.AspectImageView
            android:id="@+id/series_image"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/sample_img"
            app:imageUrl="@{model.anime.image_url_lge}"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_transparent_image"/>

        <com.mxt.anitrend.base.custom.view.widget.AutoIncrementWidget
            android:id="@+id/series_episodes"
            android:layout_gravity="top|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.mxt.anitrend.base.custom.view.text.RatingTextView
            android:id="@+id/custom_rating_widget"
            android:layout_gravity="top|start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lg_margin"
            app:rating="@{model.anime.average_score}"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mxt.anitrend.base.custom.view.text.SeriesTitleView
                android:id="@+id/series_title"
                android:textIsSelectable="true"
                android:textColor="@color/white"
                android:layout_gravity="top|start"
                android:padding="@dimen/md_margin"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Gintama."/>

            <com.mxt.anitrend.base.custom.view.text.AiringTextView
                android:id="@+id/series_airing"
                android:padding="@dimen/md_margin"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:airingDate="@{model.anime.airing}"
                tools:text="EP 31: 4 days from now"/>

            <com.mxt.anitrend.base.custom.view.widget.SeriesStatusWidget
                android:id="@+id/series_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sm_margin"
                app:airingStatus="@{model}"
                tools:background="@color/colorStateOrange"/>

        </LinearLayout>

    </FrameLayout>

</layout>