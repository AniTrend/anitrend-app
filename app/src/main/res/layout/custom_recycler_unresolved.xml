<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/series_image_sm"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/container">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/avatar_size_xl"
            android:layout_height="@dimen/avatar_size_xl"
            android:layout_marginBottom="@dimen/lg_margin"
            android:src="@drawable/empty_icon" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mxt.anitrend.base.custom.view.text.SingleLineTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_unresolved_type"
                android:id="@+id/error_unresolved_type" />
        </LinearLayout>

    </LinearLayout>
</layout>