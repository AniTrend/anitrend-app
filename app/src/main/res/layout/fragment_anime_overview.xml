<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="com.mxt.anitrend.view.detail.fragment.AnimeOverviewFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Main Container-->
        <LinearLayout
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Image Container & Small Details-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/card_color"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--Right Info Grid-->
                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/anime_details_image"
                        android:layout_alignTop="@+id/anime_details_image"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="220dp">

                        <!--Header Items-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="58dp">

                            <TextView
                                android:id="@+id/anime_details_air_status"
                                tools:text="Currently Airing"
                                android:layout_centerVertical="true"
                                android:fontFamily="sans-serif-condensed"
                                android:textAllCaps="true"
                                android:textSize="12sp"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/anime_details_main_title"
                                tools:text="Lead Tilte For What Ever Anime This May Be"
                                android:fontFamily="sans-serif-medium"
                                android:layout_alignParentStart="true"
                                android:textIsSelectable="true"
                                android:layout_marginTop="2dp"
                                android:ellipsize="end"
                                android:maxLines="3"
                                android:textSize="14sp"
                                android:layout_toStartOf="@+id/anime_details_air_status"
                                android:layout_marginEnd="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <FrameLayout
                            android:background="@color/colorBlueGrey200"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <android.support.v4.widget.Space
                            android:layout_width="wrap_content"
                            android:layout_height="5dp" />

                        <!--Anime Small Details-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Anime English Name"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed" />

                            <TextView
                                android:id="@+id/anime_details_main_title_eng"
                                tools:text="One Punch Man"
                                android:textIsSelectable="true"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="Anime Type:" />

                            <TextView
                                android:id="@+id/anime_details_show_type"
                                tools:text="TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-light" />

                            <!--Footer Date Items-->
                            <RelativeLayout
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/anime_title_start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Starts" />

                                <TextView
                                    android:id="@+id/anime_title_end_date"
                                    android:layout_below="@+id/anime_title_start_date"
                                    android:text="Ended"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed" />

                                <TextView
                                    android:id="@+id/anime_details_start_date"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/anime_title_start_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light"
                                    tools:text="May 26 2016" />

                                <TextView
                                    android:id="@+id/anime_details_end_date"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignTop="@+id/anime_title_end_date"
                                    tools:text="Yesterday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-light" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/anime_details_image"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground"
                        android:layout_width="145dp"
                        android:layout_height="220dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <!--Other Anime Information-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/card_color"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <!--Header Text Items-->
                    <TextView
                        android:text="Anime Details"
                        android:fontFamily="sans-serif-condensed"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:background="?colorAccent"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <!--Details Holder-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--Position 0-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Anime Season" />

                                <TextView
                                    android:id="@+id/anime_details_season"
                                    tools:text="2015 Fall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Next Episode" />

                                <TextView
                                    android:id="@+id/anime_details_next_ep"
                                    tools:text="EP 3 Airing In 2 days"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <!--Position 1-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:clickable="true"
                                android:foreground="?selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Anime Tags" />

                                <TextView
                                    android:id="@+id/anime_details_tags"

                                    android:textIsSelectable="true"
                                    tools:text="School, Seinen, Fighting"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:layout_marginRight="35dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                            <LinearLayout
                                android:clickable="true"
                                android:foreground="?selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Anime Genre" />

                                <TextView
                                    android:id="@+id/anime_details_genres"
                                    android:textIsSelectable="true"
                                    tools:text="Action, Comedy, Sci-Fi, Supernatural"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <!--Position 2-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Total Episodes" />

                                <TextView
                                    android:id="@+id/anime_details_episode_count"
                                    tools:text="12 Episodes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Avg. Episode Duration" />

                                <TextView
                                    android:id="@+id/anime_details_episode_duration"
                                    tools:text="24 Minutes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <!--Position 3-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:clickable="true"
                                android:foreground="?selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="50dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Hash Tag" />

                                <TextView
                                    android:id="@+id/anime_details_hashtag"
                                    android:textIsSelectable="true"
                                    tools:text="#onepunchman"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Anime Origin" />

                                <TextView
                                    android:id="@+id/anime_details_origin"
                                    tools:text="Manga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />

                        <!--Position 4-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                android:id="@+id/anime_main_studio_container"
                                android:clickable="true"
                                android:foreground="?selectableItemBackground"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="50dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Main Studio" />

                                <TextView
                                    android:id="@+id/anime_details_main_studio"
                                    android:textIsSelectable="true"
                                    tools:text="MADHOUSE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed"
                                    android:text="Anime Score" />

                                <TextView
                                    android:id="@+id/anime_details_avg_score"
                                    tools:text="85%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-condensed-light" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <!--Rating & Description-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/card_color"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <!--Header Text Items-->
                    <TextView
                        android:text="Rating &amp; Description"
                        android:fontFamily="sans-serif-condensed"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:background="?colorAccent"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <RatingBar
                        android:id="@+id/rating_item"
                        android:theme="@style/RatingBar"
                        android:isIndicator="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:stepSize="0.01"
                        />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Japanese Title"
                        />

                    <TextView
                        android:id="@+id/anime_details_main_title_jap"
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Japanese Title"
                        />

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Description"
                        />

                    <TextView
                        android:text="Description.."
                        android:textIsSelectable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/anime_details_decription"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>
