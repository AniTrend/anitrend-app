<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/relation_model_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:contentDescription="Relation Item Image" />

    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/toolbar_shadow">

        <TextView
            android:id="@+id/relation_model_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lead Tilte For What Ever Anime This May Be"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginBottom="2dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textIsSelectable="true"
            android:textAlignment="center"
            android:layout_above="@+id/relation_model_rating"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@id/relation_model_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-condensed"
            android:drawableStart="@drawable/ic_star_border_white_18dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            tools:text="4.5"
            android:textIsSelectable="true"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/relation_model_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:typeface="monospace"
            android:textColor="@color/white"
            tools:text="TV"
            android:textIsSelectable="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/relation_model_relation_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textAllCaps="true"
            tools:text="Prequel"
            android:textIsSelectable="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</FrameLayout>