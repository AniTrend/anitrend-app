<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/episode_image"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/series_ep_height" />

    <TextView
        android:background="@color/colorBackground"
        android:id="@+id/episode_duration"
        android:layout_gravity="top|end"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:drawableEnd="@drawable/ic_timelapse_white_18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@color/colorBackground"
        android:id="@+id/episode_size"
        android:layout_gravity="top|start"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:drawableStart="@drawable/ic_sd_storage_white_18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/episode_title"
        android:background="@color/colorBackground"
        android:layout_gravity="bottom|center_horizontal"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>